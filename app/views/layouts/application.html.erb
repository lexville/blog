</head>
<body>

<div class="container">
  <br>
  <%= link_to "Home", root_path, class: "btn btn-primary" %>
  <%= link_to "New Post", new_post_path, class: "btn btn-primary pull-lg-right" %>
  <%= yield %>
</div>

</body>
</html>
